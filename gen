from reportlab.lib.pagesizes import letter
from reportlab.pdfgen import canvas

# FIXME change all numbers from inches to whatever
card_start_top = 1  # 0.25
card_start_side = 1  # 0.5
card_height = 1  # 3.5
card_width = 1  # 2.5


def write_page(pdf, page):
    for row_i in range(0, len(page), 3):
        row = page[row_i:row_i+3]
        for i in range(len(row)):
            start_pos = (card_start_top + card_height * (row_i // 3),
                         card_start_side + card_width * i)
            print(start_pos)


if __name__ == "__main__":
    write_page(None, list(range(9)))
